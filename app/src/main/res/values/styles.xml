<resources>
    <style name="CustomDialogStyle" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowBackground">@drawable/dialog_background</item> <!-- Use custom background -->
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowElevation">8dp</item>
        <item name="android:backgroundDimEnabled">true</item> <!-- Optional: Dim background -->
    </style>

    <style name="CircularImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- This makes the image round -->
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/app_colorPrimary</item>
        <item name="colorPrimaryDark">@color/app_colorPrimaryDark</item>
        <item name="colorAccent">@color/app_colorAccent</item>
        <item name="app_background">@color/app_background</item>
        <item name="app_textColor">@color/app_textColor</item>
        <item name="android:statusBarColor">@android:color/darker_gray</item>
    </style>




</resources>
